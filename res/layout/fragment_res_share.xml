<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_search_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2" >

    <ListView
        android:id="@+id/lv_res_share"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    
     <com.fanchen.aisou.view.LoadingView
        android:id="@+id/loadingView_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:loadingText="玩命加载中..." />
     
      <ImageButton
        android:id="@+id/ib_res_load_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/base_empty_view"
        android:clickable="true"
        android:visibility="gone" />

</FrameLayout>