<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/image_border_width" android:color="@color/tertiary_text" />
            <corners android:radius="7.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/iqing_red" />
            <stroke android:width="@dimen/image_border_width" android:color="@color/tertiary_text" />
            <corners android:radius="7.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/iqing_red" />
            <stroke android:width="@dimen/image_border_width" android:color="@color/tertiary_text" />
            <corners android:radius="7.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/image_border_width" android:color="@color/iqing_red_2" />
            <corners android:radius="7.0dip" />
        </shape>
    </item>
</selector>